<h1>Listing posts</h1>

<table>
  <tr>
		<th>Industry<br> Category</th>
    <th>title</th>
    <th>Content</th>
    <th>Date</th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
		<td><%= post.industry_category.present? ? post.industry_category.name : "TENDENCIAS" %></td>
		<td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= l(post.date) %></td>
    <td><%= link_to 'Show', post %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

