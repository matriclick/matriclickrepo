<table width="650" align="center" style="font-size: 14px;" cellpadding="0" cellspacing="0">
	<tr id="topshadow">
		<td height="10" width="10" background="http://matriclick.com/images/emails/shadow_tl.gif" bgcolor="#ffffff"></td>
		<td height="10" background="http://matriclick.com/images/emails/shadow_top.gif" bgcolor="#ffffff"> </td>
		<td height="10" width="10" background="http://matriclick.com/images/emails/shadow_tr.gif" bgcolor="#ffffff"> </td>
	</tr>
	<tr id="header">
		<td width="10" background="http://matriclick.com/images/emails/shadow_left.gif" bgcolor="#ffffff" rowspan="2"></td>
		<td height="102" bgcolor="#ffffff" align="center">
			<table width="95%"><tr>
				<td align="left">
					<img src="http://matriclick.com/images/emails/logo_matriclick_sin_caja.png" alt="Matriclick.com">
				</td>
			</tr></table>
		</td>
		<td width="10" background="http://matriclick.com/images/emails/shadow_right.gif" bgcolor="#ffffff" rowspan="2"> </td>
	</tr>
	<tr id="content">
		<td bgcolor="#eee" align="center">
			<%= yield :content %>
		</td>
	</tr>
	<tr id="bottomshadow">
		<td height="10" width="10" background="http://matriclick.com/images/emails/shadow_bl.gif" bgcolor="#ffffff"></td>
		<td height="10" background="http://matriclick.com/images/emails/shadow_bottom.gif" bgcolor="#ffffff"> </td>
		<td height="10" width="10" background="http://matriclick.com/images/emails/shadow_br.gif" bgcolor="#ffffff"> </td>
	</tr>
	<tr id="copyright">
		<td></td>
		<td align="right">
			<span style="font-family: 'Lucida Grande', 'Segoe UI', Arial, Verdana, 'Lucida Sans Unicode', Tahoma, 'Sans Serif'; font-size: 11px; color: #888;">&copy;&nbsp;<%= Date.today.year %>&nbsp;Matriclick</span>
		</td>
		<td></td>
	</tr>
</table>
