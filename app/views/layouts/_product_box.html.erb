<div class="product_box">
	<div class="product_image center">
		<% if element.product_images.active.blank? %>
			<%= link_to (image_tag "/images/smaller/missing.png"), products_and_services_catalog_description_path(element.id, :object_class => element.class), :title => t('show') %>
		<% else %>
			<%= link_to (image_tag element.product_images.active.cover_first.first.image.url(:smaller)), products_and_services_catalog_description_path(element.id, :object_class => element.class), :title => t('show') %>
		<% end %>
	</div>
	<div class="product_name"><%= crop_if_longer(element.name, 20) %></div>
	<div class="product_supplier"><%= link_to crop_if_longer(element.supplier_account.fantasy_name, 21) , supplier_description_path(element.supplier_account.supplier, :public_url => element.supplier_account.public_url), :class => "link_proveedor" %></div>
<!--	
	<div class="product_stars"><br /></div>
	<div class="product_links">
	</div>-->
</div>
