.win_wedding_profile {
	color: #555555;
	float: right;
	font-size: 32px;
	line-height: 38px;
	margin-right: 99px;
	margin-top: 23px;
	width: 217px;
}
div.campaign_titles {
	margin:auto;
	text-align:center;
	width:80%;
	color:#444;
	h1 {
		font: {
			size:18px;
			weight:bold;
		}
	}
	h2 {
		font: {
			size:14px;
			weight:lighter;
		}
	}
}
.anecdote_box {
	border:solid 1px #ccc;
	padding:10px 10px 10px 8px;
	font-size:11px;
	background:white;
	margin:15px 19px 10px 10px;
	text-align:center;
	
	.images_box {
		float:left;
		margin:10px 20px 10px 10px;
	}
	.title {
		font: {
			size:18px;
			weight:bold;
		}
		margin-top:10px;
		margin-bottom:20px;
	}
	.description {
		text-align:left;
	}
	.anecdote_stars {
		margin-top:10px;
		float:right;
	}
	.addthis_toolbox {
		@extend .stars;
		float:left;
		padding-top:5px;
	}
}
#left_arrow_box {
	height: 55px;
	width: 20px;
	a.arrow {
		height:100%;
		width:100%;
		background:#EEEEEE url(<%= asset_path('prev_next_arrows.png') %>) no-repeat scroll 3px 18px;
	  border: 1px solid #DDDDDD;
		display:block;
	}
	a.arrow:hover {
		background-color:#E4E4E4;
	}
}
#right_arrow_box {
	@extend #left_arrow_box;
	a.arrow {
		background:#EEEEEE url(<%= asset_path('prev_next_arrows.png') %>) no-repeat scroll -31px 18px;
	}
}
.rating_star:hover {
	cursor:pointer;
}
.counter {
	color:#aaa;
	margin-top:20px;	
}
div.slider_width {
	width:96%;
	height:310px;
	margin-left:45px;
}
div.campaign_section {
	width:96%;
	margin:30px auto;
	padding-bottom:20px;
	clear:both;
	border-bottom:1px solid #DDD;
	height:95px;
}
div.campaign_body {
	margin:20px auto;
	font-size:15px;
	font-weight:lighter;
	line-height:28px;
	color:#000;
	width:95%;
	
	strong {
		font-weight:700;
	}
	
}
div.campaign_title {
	color:#000;
	font-size:20px;
	font-weight:bolder;
}
div.cua_vote {
	margin:4px 0px;
}
div.cua_vote span.vote_count {
	position:relative;
	bottom:3px;
	font-size:10px;
	font-family:lucida grande, helvetica, arial, sans-serif;
	color:#555;
}
a.vote_active, a.vote_inactive {
	height:16px;
	width:13px;
	display:inline-block;
	background:url(<%= asset_path('vote_up.png') %>) no-repeat;
}
a.vote_inactive, a.vote_active:hover {
	background:url(<%= asset_path('vote_up.png') %>) no-repeat scroll -15px 0px;
}
div#user_story {
	span#quote {
		font-size:46px;
		position:relative;
		top:15px;
		color:#555;
	}
	min-width:600px;
	max-width:700px;
	#image {
		float:left;
		margin-right:30px;
	}
	#description {
		float:left;
		width:200px;
	}
}
table#campaign_stories {
	margin-right:20px;
	float:left;
	td {padding:10px;}
	td.image {
		width:120px;
		text-align:center;
	}
	span.quote {
		font-size:34px;
		color:#888;
		position:relative;
		top:3px;
		right:3px;
	}
	td.campaign_user_account_info_id {
		color:#ccc;
		font-size:14px;
		padding:0;
		padding-left:5px;
	}
}
table#campaign_best_stories {
    border:2px solid #ccc;
    width:35%;
    td.vote_count {
    text-align:center;
    padding-left:5px;
    }
}
div.rock_image {
	width:634px;
	height:450;
	margin:20px auto;
}
div.alert {
	padding:8px 14px;
	color:#3A87AD;
	background-color:#D9EDF7;
	border:1px solid #BCE8F1;
	-webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -ms-border-radius: 4px;
  -o-border-radius: 4px;
  border-radius: 4px;
}

/*--------------------- Suggested Wedding ---------------------*/
div.suggested_ic {
	width:45%;
	float:left;
	display:table;
	margin:10px;
	img {
		vertical-align:middle;
		display:table-cell;
	}
	div.image {
		text-align:center;
		width:67%;
		div {margin-top:4px;}
	}
	div.list {
		display:table-cell;
		vertical-align:middle;
		width:50%;
		ul {
			li {
				font-size:12px;
				color:#444;
				list-style:disc;
			}
		}
	}
}
/*--------------------- END Suggested Wedding ---------------------*/


